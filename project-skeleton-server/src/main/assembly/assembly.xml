<assembly>
    <id>assembly</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <!--打包的文件源都从构建目录中获取-->
    <fileSets>
        <fileSet>
            <directory>${project.basedir}${file.separator}src/main/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}${file.separator}config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}${file.separator}lib</directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.build.directory}${file.separator}${build.finalName}.${project.packaging}</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
</assembly>